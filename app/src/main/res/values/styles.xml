<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/green</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/bg_matchcentre</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/orange</item>
        <!-- <item name="android:icon">@android:drawable/</item> -->
    </style>

    <style name="SwipeFling">
        <item name="rotation_degrees">15</item>
        <item name="min_adapter_stack">6</item>
        <item name="max_visible">4</item>
    </style>



</resources>
