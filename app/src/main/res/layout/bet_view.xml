<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="#ff9fb3ce">
<LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

    <TextView
        android:id="@+id/txtInfo"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:background="#ffe1eee9"
        android:gravity="left"
        tools:text="Info"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtDate"
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:background="#ffe1eee9"
        android:gravity="left"
        tools:text="date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="50"    >
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img1Icon"
        android:src="@drawable/team_one"
         />
    <View
        android:id="@+id/item_swipe_left_indicator"
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#ff3bff52" />
</FrameLayout>
    <TextView
        android:id="@+id/txt1Title"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:background="#E339"
        android:gravity="center"
        tools:text="test"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.30"
        android:id="@+id/radio1odd" />

</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="50"    >
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img2Icon"
            android:src="@drawable/team_two"
            />
    <View
        android:id="@+id/item_swipe_right_indicator"
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:background="#ff4bff9d" />
</FrameLayout>
        <TextView
            android:id="@+id/txt2Title"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="#ee919699"
            android:gravity="center"
            tools:text="team 2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.30"
        android:id="@+id/radio2odd" />


    </LinearLayout>
</LinearLayout>


    </LinearLayout>





</FrameLayout>